extends layout

block content
  h1= title
  p Welcome to #{title}, a peer-to-peer foreign currency exchange platform.

  label(for="get") I need exchange 
  select#get
    option(value="USD") USD
    option(value="CNY") CNY
  
  label(for="give") for 
  select#give
    option(value="USD") USD
    option(value="CNY") CNY

  .amount-inputs
    input#get-amount(type="text")
    span#equal-sign &equals;
    input#give-amount(type="text")  
    span#times-sign &times;
    input#rate(type="text", value="6.88") 
